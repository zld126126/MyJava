<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
                      xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
                      name="webx-simple">
    <requiredProperties>
        <requiredProperty key="webx-version">
            <defaultValue>3.2.4</defaultValue>
        </requiredProperty>
        <requiredProperty key="spring-version">
            <defaultValue>3.2.7.RELEASE</defaultValue>
        </requiredProperty>
    </requiredProperties>
    <fileSets>
        <fileSet>
            <directory />
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>pom.xml</exclude>
                <exclude>src/main/java/**</exclude>
                <exclude>src/main/webapp/WEB-INF/webx*.xml</exclude>
                <exclude>src/main/webapp/WEB-INF/logback.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/main/webapp/WEB-INF</directory>
            <includes>
                <include>webx*.xml</include>
                <include>logback.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
